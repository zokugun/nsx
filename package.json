{
	"name": "@zokugun/nsx",
	"description": "Quickly run npm scripts",
	"version": "0.1.0",
	"author": {
		"name": "Baptiste Augrain",
		"email": "daiyam@zokugun.org"
	},
	"license": "MIT",
	"homepage": "https://github.com/zokugun/nsx",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zokugun/nsx.git"
	},
	"bugs": {
		"url": "https://github.com/zokugun/nsx/issues"
	},
	"type": "module",
	"bin": {
		"nsx": "bin/nsx"
	},
	"scripts": {
		"commit": "cz",
		"compile": "tsc -p src",
		"lint": "xo",
		"prepare": "husky; fixpack || true",
		"prepublishOnly": "npm run compile",
		"release": "release-it",
		"watch": "tsc -watch -p src"
	},
	"dependencies": {
		"@zokugun/xtry": "^0.1.0",
		"ansi-colors": "^4.1.3",
		"commander": "^13.1.0",
		"cross-spawn": "^7.0.6",
		"enquirer": "^2.4.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@types/cross-spawn": "^6.0.6",
		"@types/node": "^20.14.8",
		"commitizen": "^4.3.1",
		"fixpack": "^4.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"release-it": "^18.1.2",
		"typescript": "^5.7.3",
		"xo": "0.60.0"
	},
	"keywords": [
		"alias",
		"npm",
		"npm-scripts",
		"run",
		"script",
		"shorthand"
	]
}
